<Window x:Class="BetterMatchMaking.PopupPreviewFunctionTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterMatchMaking"
        mc:Ignorable="d"
        Title="PopupPreviewFunctionTable" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Text="This table is a prefiew of the function : TargetDiff = (Sof / X) * A + B. If less than floor, than it use floor value instead. Any 0 parameter disable the function and use floor as constant. " />
        <DataGrid x:Name="grid" IsReadOnly="True" Grid.Row="1" />
    </Grid> 
</Window>
